<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AddBlog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
    <style>
        .form-wrapper {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: transparent;
        }

        .glass-form {
            width: 100%;
            max-width: 400px;
            background: rgba(255, 255, 255, 0.15);
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.25);
            color: #333;
        }
    </style>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="form-wrapper">
    <div class="glass-form">
        <h2 class="text-center mb-4">Add Blog</h2>
        <form action="/blog" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="coverImage" class="form-label">Cover Image</label>
                <input type="file" class="form-control" id="coverImage" name="coverImage" aria-describedby="coverImage" required>
            </div>
            <label for="category">Category</label>
            <select name="category_id" class="from-select mb-3" required>
                <% categories.forEach(cat => { %>
                <option value="<%= cat.id %>"><%= cat.name %></option>
                <% }) %>
            </select>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" name="title" aria-describedby="title" required>
            </div>
            <div class="mb-3">
                <label for="body" class="form-label">Body</label>
                <textarea name="body" class="form-control" id="body" required></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-secondary">Submit</button>
            </div>
        </form>
    </div>
    </div>
    <%- include('./partials/script') %>
</body>
</html>
    
    